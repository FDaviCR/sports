#: import FadeTransition kivy.uix.screenmanager.FadeTransition

GerenciadorDeTelas:
    transition: FadeTransition()  # Efeito de transição entre as telas
    MenuScreen:
    Tela1:
    Tela2:
    Tela3:

<MenuScreen>:
    name: 'menu'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: "Menu Principal"
            font_size: 32
        Button:
            text: "Ir para Tela 1"
            on_release:
                app.root.current = 'tela1'
        Button:
            text: "Ir para Tela 2"
            on_release:
                app.root.current = 'tela2'
        Button:
            text: "Ir para Tela 3"
            on_release:
                app.root.current = 'tela3'
        Button:
            text: "Sair"
            on_release:
                app.stop()

<Tela1>:
    name: 'tela1'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: "Tela 1"
            font_size: 32
        Button:
            text: "Voltar para o Menu"
            on_release:
                app.root.current = 'menu'

<Tela2>:
    name: 'tela2'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: "Tela 2"
            font_size: 32
        Button:
            text: "Voltar para o Menu"
            on_release:
                app.root.current = 'menu'

<Tela3>:
    name: 'tela3'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: "Tela 3"
            font_size: 32
        Button:
            text: "Voltar para o Menu"
            on_release:
                app.root.current = 'menu'
